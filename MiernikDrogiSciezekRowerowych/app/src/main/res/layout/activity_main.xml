<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnStart"
        android:layout_width="114dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="11dp"
        android:text="Start" />

    <Button
        android:id="@+id/btnStop"
        android:layout_width="114dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnStart"
        android:layout_alignParentTop="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="79dp"
        android:text="Stop" />

    <TextView
        android:id="@+id/txtVstatusBlu"
        android:layout_width="203dp"
        android:layout_height="45dp"
        android:layout_alignBottom="@+id/btnStart"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="1dp"
        android:text="Status Bluetooth"
        android:textColor="#003399" />

    <TextView
        android:id="@+id/txtVstatusGPS"
        android:layout_width="203dp"
        android:layout_height="41dp"
        android:layout_alignStart="@+id/txtVstatusBlu"
        android:layout_alignBottom="@+id/btnStop"
        android:text="GPS  status "
        android:textColor="#003399" />

    <ListView
        android:id="@+id/deviceList"
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="146dp"
        android:background="#FFFBFFE0"
        android:scrollbars="vertical"

        />

    <Button
        android:id="@+id/btnShowMap"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnStart"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="58dp"
        android:layout_marginBottom="231dp"
        android:text="Pokaż mape" />

    <Button
        android:id="@+id/btnShowData"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnStart"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="56dp"
        android:layout_marginBottom="166dp"
        android:text="Pokaż baze danych" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="226dp"
        android:layout_height="133dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="71dp"
        android:layout_marginBottom="6dp"
        app:srcCompat="@drawable/rentals" />

</RelativeLayout>